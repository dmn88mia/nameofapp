<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.image_url %></td>
            <td><%= link_to 'Show', product, class: 'btn btn-mini btn-default' %></td>
            <td class="btn-override-white"><%= link_to 'Edit', edit_product_path(product), class: 'btn  btn-mini btn-success' %></td>
            <td class="btn-override-white"><%= link_to 'Destroy', product, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

